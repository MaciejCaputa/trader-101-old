// Component Signup
.app__component.app__component--signup
  form.app__component--signup__form
    p.app__component--signup__form__error-message {{ $ctrl.signup.errorMessage }}
    input.app__component--signup__form__input(ng-model='$ctrl.signup.firstName',
                                                type='text',
                                                placeholder='Firstname')
    input.app__component--signup__form__input(ng-model='$ctrl.signup.lastName',
                                                type='text',
                                                placeholder='Lastname')
    input.app__component--signup__form__input(ng-model='$ctrl.signup.email',
                                                type='text',
                                                placeholder='e-mail')
    input.app__component--signup__form__input(ng-model='$ctrl.signup.password',
                                                type='password',
                                                placeholder='password')
    button.app__component--signup__form__button(ng-click='$ctrl.signUp()') Sign Up
