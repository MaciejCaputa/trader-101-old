// Company: name, graph, description.
section.app__component.app__component--historic(class='{{company ? "show-popup" : "hide"}}')

  // Exit button from a graph modal.
  i.app__component--historic__exit.ion.ion-close(ng-click='company=null')

  // Title of a graph.
  h2.app__component--historic__name {{ company.name }}

  // Choosing time span of a graph.
  .app__component--historic__time-spans
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=7; getCompany()') Week
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=31; getCompany()') Month
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=62; getCompany()') 2 Months
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=186; getCompany()') 6 Months
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=365; getCompany()') 1 Year 
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=730; getCompany()') 2 Years 
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=1825; getCompany()') 5 Years 
    button.app__component--historic__time-spans__btn(ng-click='timeSpan=3650; getCompany()') 10 Years

  // Canvas of chart where graph will be plotted.
  svg.app__component--historic__graph#visualisation

  // Brief description of a company
  p.app__component--historic__description {{ company.description }}
