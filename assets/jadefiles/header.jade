header.app__header

  .app__header__inner
  
    .app__header__inner__logo
      img.app__header__inner__logo__img(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/387354/stock-market-logo.png')
      h1.app__header__inner__logo__title Trader 101
      i.app__header__inner__logo__icon.ion.ion-chevron-right
      h2.app__header__inner__logo__subtitle {{ view[0].toUpperCase() + view.substring(1).toLowerCase() }}
      
    .app__header__inner__profile
    
      .app__header__inner__profile__greeting
        span Hi, {{ currentUser.name }}!
        br
        span Your balance: ${{ currentUser.balance }}.
      
      .app__header__inner__profile__avatar
        img.app__header__inner__profile__avatar__img(ng-src='{{ currentUser.avatar }}')
