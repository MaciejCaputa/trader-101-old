// Component Feed
.app__component.app__component--feed

  .app__component--feed__cards
    .app__component--feed__cards__card
      .app__component--feed__cards__card__graph
        img.app__component--feed__cards__card__graph__img(src='https://www.google.co.uk/finance/chart?cht=c&q=INDEXFTSE:UKX,INDEXFTSE:MCX,INDEXFTSE:ASX,INDEXFTSE:T1X&tlf=24h&ei=eY09WJGsNcjQUqv6urgM')
        
    .app__component--feed__cards__favorites
      .app__component--feed__cards__favorites__favorite Favorite 1
      .app__component--feed__cards__favorites__favorite Favorite 2
      .app__component--feed__cards__favorites__favorite Favorite 3
      
  .app__component--feed__cards.app__component--feed__cards--tip
    .app__component--feed__cards__card.app__component--feed__cards__card--tip
      p If you had invested <strong>$1000</strong> in <strong>GOOG</strong> <em>a week ago</em>.
      p Today you would be <strong>$54</strong> richer.

  .app__component--feed__news
    
    .app__component--feed__news__card(ng-repeat='page in $ctrl.news')
      div(ng-repeat='news in page.a | limitTo : 3')
      
        h3.app__component--feed__news__card__header(ng-show='!$index')
          a.app__component--feed__news__page__card__footer__read-more(ng-href='{{news.u}}') {{ news.t }}
        
        small.app__component--feed__news__card__source(ng-show='!$index') {{ news.s }} - {{ news.d }}
          
        p.app__component--feed__news__card__paragraph(ng-show='!$index') {{ news.sp }}
        
        p.app__component--feed__news__card__subheader(ng-show='$index')
          a.app__component--feed__news__page__card__footer__read-more(ng-href='{{news.u}}') {{ news.t }}
          small  {{ news.s }}
